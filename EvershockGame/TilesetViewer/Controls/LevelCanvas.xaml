                <Grid Name="parent" Margin="2,13,2,0">
                    <Line  X1="0" Y1="0" X2="8" Y2="8" Stroke="White" StrokeThickness="1.5" />
                    <Line  X1="0" Y1="8" X2="8" Y2="0" Stroke="White" StrokeThickness="1.5" />
                </Grid>
