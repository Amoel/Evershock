<UserControl x:Class="TilesetViewer.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TilesetViewer"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="16">
    <Grid Margin="0" Background="#44000000">
        <Rectangle Margin="0">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding Image, UpdateSourceTrigger=PropertyChanged}" Viewbox="{Binding View, UpdateSourceTrigger=PropertyChanged}"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
